<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <View
        android:id="@+id/settingReportLine"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/dashed_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingLblDescription" />

    <TextView
        android:id="@+id/settingLblDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/sf_pro_display_light"
        android:text="Update your settings here"
        android:textColor="@color/darkgray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/settingLblHeader"
        app:layout_constraintTop_toBottomOf="@+id/settingLblHeader" />

    <ImageView
        android:id="@+id/settingBtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingLblHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/settingLblHeader"
        app:srcCompat="@drawable/ic_round_arrow_back_ios_24" />

    <TextView
        android:id="@+id/settingLblHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="Setting"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/settingBtnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settingBtnChangeCode"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/btn_primary_outline_background"
        android:text="Change Access Code"
        android:textColor="@color/master_card_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingReportLine" />

    <ImageView
        android:id="@+id/settingImgChangeCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/settingBtnChangeCode"
        app:layout_constraintStart_toStartOf="@+id/settingBtnChangeCode"
        app:layout_constraintTop_toTopOf="@+id/settingBtnChangeCode"
        app:srcCompat="@drawable/ic_round_lock_24" />

</androidx.constraintlayout.widget.ConstraintLayout>