<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/skeletonTransactionCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:clickable="true"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/skeletonTransactionConstLayoutInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/skeletonTransactionSkeletonTransactionTypeContainer"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@color/midlightgray"
                    app:cardCornerRadius="2dp"
                    app:layout_constraintBottom_toBottomOf="@+id/skeletonTransactionImgTransactionType"
                    app:layout_constraintEnd_toEndOf="@+id/skeletonTransactionImgTransactionType"
                    app:layout_constraintStart_toStartOf="@+id/skeletonTransactionImgTransactionType"
                    app:layout_constraintTop_toTopOf="@+id/skeletonTransactionImgTransactionType">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/skeletonTransactionSkeletonShimmerTransactionTypeLeft"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="-40dp"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/gradient_background_none_to_white" />

                        <ImageView
                            android:id="@+id/skeletonTransactionSkeletonShimmerTransactionTypeRight"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/skeletonTransactionSkeletonShimmerTransactionTypeLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/gradient_background_white_to_none" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/skeletonTransactionSkeletonNameContainer"
                    android:layout_width="0dp"
                    android:layout_height="14sp"
                    app:cardBackgroundColor="@color/midlightgray"
                    app:cardCornerRadius="7sp"
                    app:layout_constraintBottom_toBottomOf="@+id/skeletonTransactionLblName"
                    app:layout_constraintEnd_toEndOf="@+id/skeletonTransactionLblName"
                    app:layout_constraintStart_toStartOf="@+id/skeletonTransactionLblName"
                    app:layout_constraintTop_toTopOf="@+id/skeletonTransactionLblName">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/skeletonTransactionSkeletonShimmerNameLeft"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="-40dp"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/gradient_background_none_to_white" />

                        <ImageView
                            android:id="@+id/skeletonTransactionSkeletonShimmerNameRight"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/skeletonTransactionSkeletonShimmerNameLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/gradient_background_white_to_none" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/skeletonTransactionSkeletonPaymentTypeContainer"
                    android:layout_width="0dp"
                    android:layout_height="12sp"
                    app:cardBackgroundColor="@color/midlightgray"
                    app:cardCornerRadius="6dp"
                    app:layout_constraintBottom_toBottomOf="@+id/skeletonTransactionLblPaymentType"
                    app:layout_constraintEnd_toEndOf="@+id/skeletonTransactionLblPaymentType"
                    app:layout_constraintStart_toStartOf="@+id/skeletonTransactionLblPaymentType"
                    app:layout_constraintTop_toTopOf="@+id/skeletonTransactionLblPaymentType">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/skeletonTransactionSkeletonShimmerPaymentTypeLeft"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="-40dp"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/gradient_background_none_to_white" />

                        <ImageView
                            android:id="@+id/skeletonTransactionSkeletonShimmerPaymentTypeRight"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/skeletonTransactionSkeletonShimmerPaymentTypeLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/gradient_background_white_to_none" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/skeletonTransactionSkeletonAmountContainer"
                    android:layout_width="0dp"
                    android:layout_height="14sp"
                    android:layout_marginBottom="2dp"
                    app:cardBackgroundColor="@color/midlightgray"
                    app:cardCornerRadius="7dp"
                    app:layout_constraintBottom_toBottomOf="@+id/skeletonTransactionLblAmount"
                    app:layout_constraintEnd_toEndOf="@+id/skeletonTransactionLblAmount"
                    app:layout_constraintStart_toStartOf="@+id/skeletonTransactionLblAmount"
                    app:layout_constraintTop_toTopOf="@+id/skeletonTransactionLblAmount">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/skeletonTransactionSkeletonShimmerAmountLeft"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_marginStart="-40dp"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/gradient_background_none_to_white" />

                        <ImageView
                            android:id="@+id/skeletonTransactionSkeletonShimmerAmountRight"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:padding="0dp"
                            android:scaleType="fitXY"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/skeletonTransactionSkeletonShimmerAmountLeft"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0"
                            app:srcCompat="@drawable/gradient_background_white_to_none" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/skeletonTransactionImgTransactionType"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="8dp"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/finqu" />

                <TextView
                    android:id="@+id/skeletonTransactionLblName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="Nasi Goreng"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toStartOf="@+id/skeletonTransactionLblAmount"
                    app:layout_constraintStart_toEndOf="@+id/skeletonTransactionImgTransactionType"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/skeletonTransactionLblPaymentType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/sf_pro_display_regular"
                    android:text="Livin Mandiri"
                    android:textColor="@color/darkgray"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/skeletonTransactionImgTransactionType"
                    app:layout_constraintTop_toBottomOf="@+id/skeletonTransactionLblName" />

                <TextView
                    android:id="@+id/skeletonTransactionLblAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/sf_pro_display_bold"
                    android:text="- Rp20.000"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>